    {\small{#1}} \textendash{}{\small{#2}}
}

\newcommand{\resumeItem}[2]{
  \vspace{-5pt}
  \item \fcolorbox{white}{white}{
    \parbox{0.78\textwidth}{
      \setmainfont{Calibri}
      \textbf{#1:}
      \setmainfont{Calibri Light}{ #2}
    }
  }
  \vspace{0pt}
}

\newcommand{\environment}[1]{
  \vspace{-6pt}
  \item
  \fcolorbox{white}{white}{
    \parbox{0.78\textwidth}{
      \setmainfont{Segoe UI semibold} 
      \textbf{\textit{\footnotesize Environment:}}
      \setmainfont{Segoe UI}
      {\scriptsize #1}
    }}
    \vspace{-2pt}
}

\newcommand{\SkillSet}[2]{
  \renewcommand{\labelitemi}{-}
  \setlength{\itemindent}{-15pt}
  \item\footnotesize{
    \textbf{#1}{: #2}
  }
}

\newcommand{\Certification}[3]{
  \renewcommand{\labelitemi}{-}
  \setlength{\itemindent}{-15pt}
